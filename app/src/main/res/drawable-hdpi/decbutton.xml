<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
          <stroke android:width="1dip" android:color="#20b2aa" />
         <gradient android:angle="-90" android:startColor="#20b2aa" android:endColor="#20b2aa" />   
                     
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#b9f2ff" />
         <solid android:color="#b9f2ff"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#00b3e5" />
         <gradient android:angle="-90" android:startColor="#00b3e5" android:endColor="#00b3e5"  />        
     </shape>
 </item>
</selector>